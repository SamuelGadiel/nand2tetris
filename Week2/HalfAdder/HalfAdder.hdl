CHIP HalfAdder {
    IN a, b;    // 1-entrada do bit
    
    OUT sum,    // Bit da direita de (a + b)
        carry;  // Bit da esquerda de (a + b)

    PARTS:
    
    Xor (a=a, b=b, out=sum);
    And (a=a, b=b, out=carry);
}
